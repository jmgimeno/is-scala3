// Scala uses CamelCase naming convention

val firstName = "Alvin"
class Person(val name: String)
def toUpper(s: String): String = s.toUpperCase

// vals are immutable and type can be inferred

val x = 1               // implicit
val y: Int = 1          // explicit
val z: Long = 1         // explicit

val a = "Hi"            // implicit
val b: String = "Hi"    // explicit

